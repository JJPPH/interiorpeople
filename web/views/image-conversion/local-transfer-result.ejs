<%-include("../includes/head",{pageTitle})%>

<style>
  input[type="radio"]:checked+label {
    background-color: #ffffff;
    color: #000000;
  }

  input[type="checkbox"]:checked+label {
    background-color: #ffffff;
    color: #000000;
  }
</style>
</head>


<body>
  <%-include("../includes/navbar")%>

  <main>
    <h1 class="text-3xl font-bold mt-5 ml-3 mb-7">Select furniture And Style</h1>
    <div class="container mx-auto px-4 py-8 bg-white rounded-lg shadow-lg">
      <div class="container mx-auto p-4">
        <h2 class="mt-4 mb-4 text-xl font-bold text-center">변환 전의 인테리어</h2>
        <img src="/machineLearning/<%= user.id %>/<%= imageFolderName %>/original.jpg" alt="변환 전의 인테리어 이미지" class="w-2/3 h-auto mx-auto">

        <h2 class="mt-4 mb-4 text-xl font-bold text-center">변환 후의 인테리어</h2>
        <img src="/machineLearning/<%= user.id %>/<%= imageFolderName %>/stylized.jpg" alt="변환 전의 인테리어 이미지" class="w-2/3 h-auto mx-auto">
      </div>

      <h2 class='mb-4 text-xl font-bold'>선택한 가구</h2>
      <div class="flex flex-wrap items-center mt-4 mb-4">
        <%for(let i=0;i<furnitureInfo.length;i++){%>
        <div class="px-4 py-2 mr-5 mb-4 bg-black border-2 border-black text-white font-bold rounded-md">
          <%=furnitureInfo[i].name%>
        </div>
        <%}%>
        </div>

        <h2 class='mb-4 text-xl font-bold'>선택한 스타일</h2>
        <div class="flex items-center mt-4 mb-4">
          <div for="classic" class="px-4 py-2 mr-5 bg-black border-2 border-black text-white font-bold rounded-md">
            <%= style %>
      </div>
    </div>

    <h2 class='mb-4 text-xl font-bold'>선택한 컬러</h2>
    <div class="flex items-center mt-4 mb-4">
      <div for="classic" class="px-4 py-2 mr-5 bg-black border-2 border-black text-white font-bold rounded-md">
        <%= color %>
      </div>
    </div>

    <h2 class='mb-4 text-xl font-bold'>선택한 변환 강도</h2>
    <div class="flex items-center mt-4 mb-4">
      <div for="classic" class="px-4 py-2 mr-5 bg-black border-2 border-black text-white font-bold rounded-md">
        <%= intensity %>
      </div>
    </div>

    <div class="flex justify-center">
      <a href="/image-conversion" class="bg-black hover:bg-gray-700 cursor-pointer text-white font-bold py-2 px-4 rounded">
        다른 이미지 변환해보기
      </a>
      <!--<a href="/my-page/my-images" class="bg-black hover:bg-gray-700  cursor-pointer text-white font-bold py-2 px-4 rounded ml-4">
        나의 이미지 보기
      </a>-->
    </div>


    </div>
  </main>

  <%-include("../includes/footer")%>