<%-include("../../includes/head",{pageTitle})%>
<script src="/script/myPage.js" defer></script>
</head>


<body>
  <%-include("../../includes/navbar")%>

  <main>
    <div class="bg-white items-center justify-center mt-20">
      <div class="bg-white p-10 rounded-lg shadow-md max-w-xl mx-auto">

        <form action="/my-page" method="POST" enctype="multipart/form-data">
          <h2 class="text-lg font-bold text-gray-800 mb-4">Profile Picture</h2>
          <div class="flex mb-3">
            <label for="upload-input" class="flex items-center cursor-pointer bg-black  border-black text-white rounded-lg px-4 py-2 hover:bg-gray-800">
              <span class="font-bold">이미지 업로드</span>
              <input id="upload-input" type="file" accept="image/*" name="profile-img" class="hidden">
            </label>
            <div id="preview-container" class=" items-center ml-4 hidden">
              <h3 class="text-lg font-bold mb-2">미리 보기</h3>
              <img id="preview-image" class="w-32 h-32 object-cover rounded-lg animate-pulse" src="" alt="미리 보기 이미지">
            </div>
          </div>

          <h2 class="text-lg font-bold text-gray-800 mb-4">Change Username</h2>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">New Username</label>
            <input class="w-full px-3 py-2 border border-black rounded " type="text" id="username" name="username">
            <input type="text" class="w-full border-gray-300 rounded-md shadow-sm  sm:text-sm">
          </div>

          <h2 class="text-lg font-bold text-gray-800 mt-8 mb-4">Change Password</h2>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="current-password">Current Password</label>
            <input class="w-full px-3 py-2 border border-black rounded" type="password" type="password" id="current-password" name="current-password">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="new-password">New Password</label>
            <input class="w-full px-3 py-2 border border-black rounded" type="password" id="new-password" name="new-password">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="confirm-password">Confirm Password</label>
            <input class="w-full px-3 py-2 border border-black rounded" type="password" id="confirm-password" name="confirm-password">
          </div>
          <button class="w-full bg-black text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline border border-black hover:bg-gray-700" type="submit">Save</button>
        </form>

        <button id="delete-account-button" class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded mt-2">
          Delete Account
        </button>

      </div>


    </div>
  </main>

  <%-include("../../includes/footer")%>