<%-include("../includes/head",{pageTitle})%>
</head>

<body>
  <%-include("../includes/navbar")%>

  <main>
    <div class="bg-white items-center justify-center mt-20 ">
      <div class="bg-white p-10 rounded-lg shadow-md max-w-xl mx-auto">
        <h1 class="text-2xl font-bold mb-8">Forgot Password</h1>
        <form method="POST" action="/auth/forgot-password">
          <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Email</label>
            <input class="w-full px-3 py-2 border border-black rounded focus:border-blue-500 focus:ring focus:ring-blue-200" type="email" id="email" name="email" placeholder="Enter your email" required>
          </div>

          <button class="w-full bg-black text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline border border-black hover:bg-gray-700" type="submit">Reset Password</button>
        </form>
        <div class="mt-4  text-center">
          <a class="text-gray-400 hover:text-gray-900" href="/auth/login">Return to Log In</a>
        </div>
      </div>
    </div>
  </main>

  <%-include("../includes/footer")%>