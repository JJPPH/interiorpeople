<%-include("../includes/head",{pageTitle})%>
</head>

<body>
  <%-include("../includes/navbar")%>

  <main>
    <div class="bg-white items-center justify-center mt-20 ">
      <div class="bg-white p-10 rounded-lg shadow-md max-w-xl mx-auto">
        <h1 class="text-2xl font-bold mb-8">Login</h1>

        <%if(errorMessage && errorMessage.length>0){%>
        <div class="bg-white border border-red-500 text-black text-center rounded-md px-4 py-2 mb-4">
          <p style="font-weight: bold; color: red;"><%=errorMessage[0]%></p>
        </div>
        <%}%>

        <form method="POST" action="/auth/login">
          <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Email</label>
            <input class="w-full px-3 py-2 border border-black rounded" type="email" id="email" name="email" placeholder="Enter your email" required>
          </div>
          <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">Password</label>
            <input class="w-full px-3 py-2 border border-black rounded" type="password" id="password" name="password" placeholder="Enter your password" required>
          </div>
          <button class="w-full bg-black text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline border border-black hover:bg-gray-700" type="submit">Log In</button>
        </form>
        <div class="flex justify-between mt-4">
          <a class="text-gray-400 hover:text-gray-900" href="/auth/forgot-password">Forgot Password?</a>
          <a class="text-gray-400 hover:text-gray-900" href="/auth/signup">Sign Up</a>
        </div>
      </div>
    </div>
  </main>

  <%-include("../includes/footer")%>