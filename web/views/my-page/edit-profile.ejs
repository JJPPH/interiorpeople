<%-include("../includes/head",{pageTitle})%>
<script src="/script/editProfile.js" defer></script>
</head>


<body>
  <%-include("../includes/navbar")%>

  <main>
    <div class="flex">
      <%-include("./includes/sidebar")%>

      <div class="w-3/4 mt-10 mx-auto">
        <div class="bg-white p-10 rounded-lg shadow-md max-w-xl">

          <h2 class="text-lg font-bold text-gray-800 mb-4">Profile Picture</h2>

          <div class="w-64 h-64 rounded-full flex items-center justify-center border-2 border-black overflow-hidden mx-auto">
            <% if (user.profileImg) { %>
            <img id="profileImg" src="<%= user.profileImg %>" alt="유저 프로필 이미지" />
            <% } else { %>
            <img id="profileImg" src="/userProfileImg/basic-user-image.png" alt="유저 프로필 이미지" class="rounded-full mt-20" />
            <% } %>
          </div>

          <hr class="my-10 border-2 border-gray-200 rounded-xl">

          <div class="flex justify-center items-center mb-3">
            <label for="upload-input" class="flex items-center cursor-pointer bg-black border-black text-white rounded-lg px-4 py-2 hover:bg-gray-800">
              <span class="font-bold">이미지 업로드</span>
              <input id="upload-input" type="file" accept="image/*" name="profile-img" class="hidden">
            </label>

            <button id="save-button" class="flex items-center cursor-pointer ml-4 font-bold bg-black border-black text-white rounded-lg px-4 py-2 hover:bg-gray-800">
              저장
            </button>

          </div>
        </div>
      </div>

    </div>
  </main>

  <%-include("../includes/footer")%>